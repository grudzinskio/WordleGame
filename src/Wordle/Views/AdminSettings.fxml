<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Wordle.Controllers.AdminController"
            stylesheets="@admin-controller.css">
   <VBox spacing="20" alignment="TOP_LEFT" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">

      <!-- Section: Additional Words -->
      <Label text="Additional Words:" styleClass="header-label" />
      <HBox spacing="15">
         <VBox spacing="10">
            <Button text="Upload Words" onAction="#changeFileGuessWord" styleClass="btn" />
            <Label text="Click on word to remove word" styleClass="info-label" />
            <ListView fx:id="guessWordList" prefHeight="250" prefWidth="150"/>
            <Button text="Reset List" styleClass="btn"/>
         </VBox>

         <!-- Spacer between left and right column -->
         <Region prefWidth="30"/>

         <!-- Section: Reference Word File -->
         <VBox spacing="10">
            <Label text="Reference Word File" styleClass="header-label"/>
            <TextField fx:id="refrenceWordCurrentFile" editable="false" prefWidth="300"/>
            <HBox spacing="10">
               <Button text="Change File" onAction="#changeFileReferenceWord" styleClass="btn"/>
               <Button text="Undo" onAction="#undoRefFileChange" styleClass="btn"/>
            </HBox>
            <Label fx:id="statusLabel" text="" styleClass="status-label" opacity="0"/>
         </VBox>
      </HBox>
   </VBox>
</AnchorPane>
